{
  "name": "replicated-document",
  "version": "1.0.0",
  "dependencies": {
    "@nestjs/common": "^5.7.3",
    "@nestjs/core": "^5.7.3",
    "@types/underscore": "^1.8.12",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0",
    "underscore": "^1.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "jest": "^24.1.0",
    "protobufjs": "^6.8.8",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "scripts": {
    "build": "npm run build-proto && npm run build-ts && npm run tslint && npm run test",
    "build-client-proto": "pbjs -t static-module ./protos/client/**/*.proto -o ./src/lib-proto/client.js && pbts -o ./src/lib-proto/client.d.ts ./src/lib-proto/client.js",
    "build-document-proto": "pbjs -t static-module ./protos/document/**/*.proto -o ./src/lib-proto/document.js && pbts -o ./src/lib-proto/document.d.ts ./src/lib-proto/document.js",
    "build-proto": "mkdir -p ./src/lib-proto && npm run build-client-proto && npm run build-document-proto",
    "build-ts": "tsc",
    "clean": "npm run clean-proto && npm run clean-dist",
    "clean-dist": "rm -rf ./dist",
    "clean-proto": "rm -rf ./src/lib-proto",
    "test": "jest",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  }
}
